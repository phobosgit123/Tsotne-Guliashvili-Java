package introduction;

import java.util.Scanner;

public class Anderseni {

	public static void main(String[] args) {
		// TODO Auto-generated method stub 
		 Scanner scanner = new Scanner(System.in);
		
		 // Task 1 :If the entered number is greater than 7, then print “Hello”
	        System.out.print("Enter a number: ");
	        int number = scanner.nextInt();
	        if (number > 7) {
	            System.out.println("Hello");
	        }

	        // Task 2 :If the entered name matches “John”, then output “Hello, John”, if not, then output "There is no such name"
	        scanner.nextLine(); 
	        System.out.print("Enter a name : ");
	        String name = scanner.nextLine();
	        if (name.equals("John")) {
	            System.out.println("Hello, John");
	        } else {
	            System.out.println("There is no such name");
	        }
	        
	        // Task 3:There is a numeric array at the input, it is necessary to output array elements that are multiples of 3
	        System.out.println("Enter array elements to check:");

	        while (scanner.hasNextInt()) {
	            int num = scanner.nextInt();
	            if (num % 3 == 0) {
	                System.out.print(num );
	            }
	        }
	            //answer on question:  [((())()(())]] the following sequence is not correct to be precise there is one extra bracket- ]
//please notice that i have made this tasks first in eclipse and copy pasted here because i do not know how to work in github thnx for attention.
	        
	        
	        
     

	}

}
